body
    margin: 0
    height: 100%
    overflow: hidden
.container
    margin: 0
    display: flex
    height: 100%
    align-content: center
    flex-direction: column
    min-height: 100%;
.sysInfo
    margin: 0
    padding: 1em
    border: 2px dashed black;
    display: none
    p:first-child
        text-align: center
        margin: 0
.log
    display: flex
    background: #4d94ff
    padding: 0.5em
    padding-left: 1em
    .log-show
        text-align: right
.chat
    overflow-anchor: none
    flex: 1
    display: flex
    flex-direction: column
    .chat-messages
        max-height: 83vh
        min-height: 83vh
        overflow: scroll
        overflow-x: hidden;
        padding: 1vw
        display: flex
        flex-direction: column
    .chat-field
        display: flex
        width: 100%
        border: 1px solid #333333
        position: fixed
        bottom: 0
        input 
            padding: 0.5em
            flex:1
            padding-left: 1em
        .send
            padding: 0.6em
            max-width: 19vw
            border: 1px solid black
.message-item
    margin: 0
    padding: 0.7em
    border-radius: 0.7em
    .name
        padding-left: 1em
        color: #660066
        font-weight: bold
    .message-text
        padding-top: 0.1em
        font-size: 1.2em
.message-item:nth-child(odd)
       background: #ffcc66
.message-item:nth-child(even)
       border: 0.1em solid #737373
       margin: 1em
.message-item:last-child
    // background: red
    margin-bottom: 1em
