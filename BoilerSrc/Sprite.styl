$spriteSize = 72px

size(i, j)
  (-(3 + $spriteSize*(i) + 4*i))px (-(3 + $spriteSize*(j)+(5.5*j)))px

gen-sprite(i, j) // i - номер столбца, j - номер строки;   i,j = 0, 1, ... , 4
  width: $spriteSize
  height: $spriteSize
  background: url("https://cdn.crunchify.com/wp-content/uploads/2013/06/CSS-Sprite-Example.png") size(i, j);

.button
  margin: 40px auto;
  width: 40px;
  height: 40px;
  gen-sprite(3, 4);